# Arbitrage Data Collector - Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=database
DB_PORT=5432
DB_NAME=arbitrage_data
DB_USER=arbitrage_user
DB_PASSWORD=arbitrage_secure_password_change_this

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO

# Data collection frequency (milliseconds)
SNAPSHOT_INTERVAL=500
ANALYTICS_INTERVAL=5000

# =============================================================================
# EXCHANGE API CREDENTIALS (Optional - for private data collection)
# =============================================================================
# Leave empty for public data only (book tickers, orderbooks, trades)

# MEXC Exchange
MEXC_API_KEY=
MEXC_SECRET_KEY=

# Gate.io Exchange  
GATEIO_API_KEY=
GATEIO_SECRET_KEY=

# =============================================================================
# MONITORING AND ADMINISTRATION
# =============================================================================

# PgAdmin (Database Administration)
PGADMIN_DEFAULT_EMAIL=admin@arbitrage.local
PGADMIN_PASSWORD=admin_password_change_this

# Grafana (Monitoring Dashboard)
GRAFANA_PASSWORD=grafana_password_change_this

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Data retention (days)
DATA_RETENTION_DAYS=30

# Performance tuning
MAX_CONCURRENT_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Alert thresholds
ARBITRAGE_THRESHOLD=0.001  # 0.1% minimum spread
VOLUME_THRESHOLD=1000      # $1000 minimum volume
SPREAD_ALERT_THRESHOLD=0.05 # 5% spread alert

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable/disable certain features
ENABLE_WEB_INTERFACE=false
ENABLE_API_ENDPOINTS=false
ENABLE_METRICS_EXPORT=true

# Network settings
ALLOWED_IPS=127.0.0.1,::1